<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Belanja" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kashmir_blue</item>
        <item name="colorPrimaryVariant">@color/cello</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/atomic_tangerine</item>
        <item name="colorSecondaryVariant">@color/burnt_sienna</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Belanja.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForeground">@color/white</item>
    </style>
    <style name="Theme.Belanja.TextAppearance" />
    <style name="Theme.Belanja.TextAppearance.ToolbarTitle">
        <item name="android:fontFamily">@font/lalezar</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Theme.Belanja.ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
        <item name="searchViewStyle">@style/Widget.Belanja.SearchView.SearchViewStyle</item>
    </style>
    <style name="Theme.Belanja.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Belanja.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Widget.Belanja.SearchView.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/bg_querybackground</item>
        <item name="closeIcon">@drawable/uicons_cross_small</item>
        <item name="goIcon">@drawable/uicons_arrow_small_right</item>
        <item name="voiceIcon">@drawable/uicons_microphone</item>
    </style>
    <style name="Widget.Belanja.CompoundButton.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>
</resources>